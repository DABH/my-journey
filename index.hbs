{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}


{{! The main content area on the homepage }}
<main class="content" role="main">
   
    {{! Each post will be output using this markup }}
    {{#foreach posts}}

        <article class="{{post_class}}">
            <header class="post-header">
                <span class="newsDate"><h4><time datetime="{{date format="YYYY-MM-DD"}}">{{date format='DD'}}</time></h4><span><time datetime="{{date format="YYYY-MM-DD"}}">{{date format='MMM'}}</time></span><span><time datetime="{{date format="YYYY-MM-DD"}}">{{date format='YYYY'}}</time></span></span>
                <h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
    
            </header>
            <section class="post-excerpt">
                <p>{{excerpt}}&hellip;</p>
            </section>
            <section style="bottom:0px; position:absolute; border-top:1px solid #d3d3d3; font-size:12px; color:#999; width:90%">#Tags: 
               {{#tags}}<li>{{name}}</li>{{/tags}}
                   
            </section>
        </article>
    
    {{/foreach}}

    {{!! After all the posts, we have the previous/next pagination links }}
    {{pagination}}
   
</main>
